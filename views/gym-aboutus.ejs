						<a class="nav-link" href="gym-login">
							<button class="button">Sign Up</button>
						</a>
					</li>
					<li ng-hide = "generateAuthToken()" class="nav-item">
						<a class="nav-link" href="gym-register">
							<button class="button">Login</button>
						</a>
					</li>
					<% } else{ %>
